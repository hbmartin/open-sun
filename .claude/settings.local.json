{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:vercel.com)",
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(pnpm lf:*)",
      "Bash(pnpm test:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm lf"
          }
        ]
      }
    ]
  }
}