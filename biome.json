{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "includes": ["!lib/suncalc.ts"]
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "all",
      "next": "all",
      "react": "all"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "options": {
            "groups": [{ "type": true }]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["lib/utils.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "useLiteralKeys": "off"
          }
        }
      }
    }
  ]
}
